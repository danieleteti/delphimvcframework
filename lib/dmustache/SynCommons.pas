procedure TSynLocker.SetUTF8(Index: integer; const Value: RawUTF8);
begin
  if cardinal(Index)<=high(Padding) then
    try
      Lock;
      if Index>=PaddingUsedCount then
        PaddingUsedCount := Index+1;
