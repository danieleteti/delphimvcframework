  inc(B);
  if trunc(Value)<>0 then
    B := DateToIso8601PChar(Value,B,true);
  if frac(Value)<>0 then
    B := TimeToIso8601PChar(Value,B,true,'T',WithMS);
  if twoDateTimeWithZ in fCustomOptions then
    B^ := 'Z' else
    dec(B);
end;

